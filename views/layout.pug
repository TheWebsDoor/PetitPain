doctype html
html
  head
    title
      | Petit Pain - 
      block title

    -var name = ''
    -var punchline = ''
    if (petitpain)
      -name_meta = ' - '+petitpain.name
      -punchline_meta = petitpain.punchline
      -slug_meta = petitpain.slug

    meta(name='viewport', content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no')
    meta(name="description", content=punchline_meta+". Le meilleur site internet du monde des petits pains. Si t'es là c'est que t'es un petit pain. <3")
    meta(property="og:title", content="PetitPain"+name_meta)
    meta(property="og:type", content="website")
    meta(property="og:url", content=process.env.URL+'/petitpain/'+slug_meta)
    if (petitpain)
      meta(property="og:image", content=process.env.URL+"/medias/img/uploads/petitpain-"+slug_meta+"-facebook.png")
    else
      meta(property="og:image", content=process.env.URL+"/medias/img/image-facebook.png")
    meta(property="og:description", content=punchline_meta+". Le meilleur site internet du monde des petits pains. Si t'es là c'est que t'es un petit pain. <3")
    link(rel='icon', type='image/png', href='/medias/img/favicon.png')
    !=css('petitpain')
    block css
  body(class=vertical_center ? 'vertical_center' : '')

    block content

    !=js('jquery.min')
    !=js('modernizr.min')
